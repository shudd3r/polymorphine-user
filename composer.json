{
    "name": "polymorphine/user",
    "description": "User authentication module",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Shudd3r",
            "email": "q3.shudder@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "polymorphine/session": "@dev",
        "polymorphine/csrf": "@dev"
    },
    "require-dev": {
        "polymorphine/app": "@dev",
        "polymorphine/message": "@dev",
        "polymorphine/cs": "@dev",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Polymorphine\\User\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "app/",
            "Polymorphine\\User\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "style-check": "polymorphine-cs"
    }
}
